@page
@model SIMS.Pages.Students.Courses.IndexModel
@{
    Layout = "~/Pages/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Hệ thống quản lý sinh viên";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sinh viên lớp học</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã Lớp</th>
                        <th>Mã Sinh Viên</th>
                        <th>Họ Và Tên</th>
                        <th>URL</th>
                        <th>Ngày Sinh</th>
                        <th>Email</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.StudentCourseList.Count; i++)
                    {
                        var student = Model.StudentCourseList[i];
                            <tr>
                                <td>@i</td>
                                <td>@student.CourseCode</td>
                                <td>@student.StudentNo</td>
                                <td>@student.LastName @student.FirstName</td>
                                <td>@student.UrlHandle</td>
                                <td>@student.Email</td>
                                <td>@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
