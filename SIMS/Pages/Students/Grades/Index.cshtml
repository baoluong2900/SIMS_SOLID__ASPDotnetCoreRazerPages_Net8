@page
@model SIMS.Pages.Students.Grades.IndexModel
@{
    Layout = "~/Pages/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Hệ thống quản lý sinh viên";
}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách điểm</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã Điểm</th>
                        <th>Mã Sinh Viên</th>
                        <th>Mã Khóa Học</th>
                        <th>Điểm</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.GradeList.Count; i++)
                    {
                        var grade = Model.GradeList[i];
                        <tr>
                            <td>@i</td>
                            <td>@grade.GradeId</td>
                            <td>@grade.StudentNo</td>
                            <td>@grade.CourseCode</td>
                            <td>@grade.Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
