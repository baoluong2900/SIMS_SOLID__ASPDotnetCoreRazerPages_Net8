@page
@model SIMS.Pages.Admin.Courses.CreateModel
@{
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Thêm thông tin sinh viên";
}

<h2>Thêm Thông tin sinh viên</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewCourse.CourseCode" class="control-label"></label>
        <input asp-for="NewCourse.CourseCode" class="form-control" />
        <span asp-validation-for="NewCourse.CourseCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.CourseName" class="control-label"></label>
        <input asp-for="NewCourse.CourseName" class="form-control" />
        <span asp-validation-for="NewCourse.CourseName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NewCourse.StartDate" class="control-label"></label>
        <input asp-for="NewCourse.StartDate" class="form-control" type="date" />
        <span asp-validation-for="NewCourse.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.EndDate" class="control-label"></label>
        <input asp-for="NewCourse.EndDate" class="form-control" type="date" />
        <span asp-validation-for="NewCourse.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="/Admin/Courses/Index" class="btn btn-secondary">Cancel</a>
</form>