@page
@model SIMS.Pages.Admin.Grades.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h2 class="text-center">Thêm Điểm</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="NewGrade.GradeId" class="control-label"></label>
        <input asp-for="NewGrade.GradeId" class="form-control" />
        <span asp-validation-for="NewGrade.GradeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewGrade.StudentNo" class="control-label"></label>
        <input asp-for="NewGrade.StudentNo" class="form-control" />
        <span asp-validation-for="NewGrade.StudentNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewGrade.CourseCode" class="control-label"></label>
        <input asp-for="NewGrade.CourseCode" class="form-control" />
        <span asp-validation-for="NewGrade.CourseCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewGrade.Score" class="control-label"></label>
        <input asp-for="NewGrade.Score" class="form-control" />
        <span asp-validation-for="NewGrade.Score" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-page="/Admin/Grades/Index" class="btn btn-secondary">Quay lại</a>
</form>