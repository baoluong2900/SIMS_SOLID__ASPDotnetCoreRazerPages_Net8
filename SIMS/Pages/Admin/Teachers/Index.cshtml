@page
@model SIMS.Pages.Admin.Teachers.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý giáo viên";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh sách giảng viên</h1>
    <a asp-page="/Admin/Teachers/Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus-circle fa-sm text-white-50"></i> Thêm giảng viên
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách giảng viên</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã Giảng Viên</th>
                        <th>Họ Và Tên</th>
                        <th>Email</th>
                        <th>Ngày Sinh</th>
                        <th>Khoa</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TeacherList.Count; i++)
                    {
                        var teacher = Model.TeacherList[i];
                        <tr>
                            <td>@i</td>
                            <td>@teacher.TeacherNo</td>
                            <td>@teacher.LastName @teacher.FirstName</td>
                            <td>@teacher.Email</td>
                            <td>@teacher.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@teacher.Department</td>
                            <td>
                                <a class="anticon anticon-edit btn btn-warning btn-tone m-r-5" asp-page="/Admin/Teachers/Edit" asp-route-id="@teacher.TeacherNo" onclick="console.log('@teacher.TeacherNo')">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                                    <i class="fas fa-trash-alt"></i>
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Xóa thông tin</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có muốn xóa ' @teacher.TeacherNo ' không ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                <form method="post" asp-page="/Admin/Teachers/Index" asp-page-handler="Delete">
                                                    <input type="hidden" name="teacherNo" value="@teacher.TeacherNo" />
                                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>